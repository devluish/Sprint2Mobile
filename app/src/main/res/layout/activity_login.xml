<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/telalogin"
    tools:context=".login.LoginActivity">

    <!-- Logo da tela de login -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="285dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/logo_odontoprev" />

    <!-- Campo de Login (ajustado para e-mail ou texto) -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/Digite_seu_login"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo de Senha (ajustado para ocultar caracteres) -->
    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:hint="@string/Digite_sua_senha"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botão de Login -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogin"
        android:layout_width="317dp"
        android:layout_height="35dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/button_login_background"
        android:text="Acessar"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPrimeiroAcesso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#084EC5" />

    <!-- Botão de Primeiro Acesso -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPrimeiroAcesso"
        android:layout_width="317dp"
        android:layout_height="35dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button_primeiro_acesso_background"
        android:text="Primeiro Acesso"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
